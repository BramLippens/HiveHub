{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["modules/*"]
    },
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Recommended target/module for NestJS
    "target": "ES2020",
    "module": "commonjs"
  }
}
